<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_margin="14dp"
        android:orientation="vertical"
        tools:context=".MainActivity">
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <Button
            android:text="START THREAD"
            android:id="@+id/startThread_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/thread_log"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Thread work"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

</LinearLayout>


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content">
        <Button
                android:text="START COROUTINE"
                android:id="@+id/startCorutine_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/coroutine_log"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Corutine work"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

    </LinearLayout>


</LinearLayout>